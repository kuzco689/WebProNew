<div class="container">
	<div class="header">
		<h1>Short-program</h1>
		<% if(usertype != null){
			if(usertype.usertype === '1') { %>
				<a class="newpost" href="/addpage"><i class="fas fa-plus-circle"></i></a>
				<% }
		} %>
	</div>
	<ul>
		<% blogs.forEach(function(blog){ %>
		<li class="box-list single-blog-post">
			<!-- <div class="post-picture">
		        <img src="img/bg-img/21.jpg" alt="">
		    </div> -->
			<div class="verdicts">
				<p><a href="/blogs/<%= blog._id %>"><strong><%=blog.university%> , <%=blog.country%></strong></a><br/>
					<%=blog.levelofstudy%> , <%=blog.date%><br/>
				<%=blog.body%></p>
			</div>
			<div>
				<% if(usertype != null){
					if(usertype.usertype === '1') { %>
				<a class="btn btn-info editbtn" href="/blogs/<%= blog._id %>/edit">Edit</a>
				<% }
		} %>
			</div>
			<!-- <label for="<% blog._id %>" class="custom-checkbox">
			  <input type="checkbox" id="id-of-input1"/>
			  <i class="far fa-star"></i>
			  <i class="fas fa-star"></i>
			</label> -->
		</li>
		<% }) %>
	</ul>
</div>

</body>
